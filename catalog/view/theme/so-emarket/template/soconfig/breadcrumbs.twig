<div class="breadcrumbs ">
	<div class="container">
       <div class="current-name">	  
	    	{% set last = breadcrumbs|length %}
	    	{% set i = 0 %}
	     	{% for breadcrumb, crumbInfo in breadcrumbs %}  
	      		{% set i = i + 1 %}	    
	      		{% if i == last  %} 
	        	{{ crumbInfo.text }}
	       	{% endif %}  
	    	{% endfor %}
	  	</div>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
</div>